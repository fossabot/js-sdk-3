{
  "presets": [
    "@babel/preset-env", // Handles modern JavaScript
    "@babel/preset-react" // Handles React JSX
  ],
  "env": {
    // For CommonJS builds
    "cjs": {
      "presets": [["@babel/preset-env", { "modules": "commonjs" }]]
    },
    // For ES Module builds
    "esm": {
      "presets": [["@babel/preset-env", { "modules": false }]]
    }
  }
}
