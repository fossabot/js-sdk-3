{
  "name": "@opensocket/core-js",
  "version": "1.10.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "shx rm -rf ./dist",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "babel src --out-dir dist/cjs --extensions .js,.ts --presets @babel/preset-env --ignore 'src/**/*.test.js'",
    "build:esm": "babel src --out-dir dist/esm --extensions .js,.ts --presets @babel/preset-env --ignore 'src/**/*.test.js'",
    "build:types": "tsc",
    "test": "jest",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.14",
    "jest": "^27.0.6",
    "shx": "^0.3.3",
    "typescript": "^5.6.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ]
  }
}
